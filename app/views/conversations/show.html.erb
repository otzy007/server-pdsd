<header>
  <h1 style="position:fixed; top:35px;"><%= @name %></h1><br />
</header>

<article>
<% @messages.each do |m| %>
    <%= image_tag 'avatar.gif' %>
    <br />
    <%= m.user.name %>
    <%= media_tag m,  size: '225x225' %>
    <br />

<% end %>
</article>

<footer class="navbar-fixed-bottom">
  <%= render partial: 'form', message: @message %>
</footer>
