<header>
  <h1 style="position:fixed; top:35px;"><%= @name %></h1><br />
</header>

<article>
<% @messages.each do |m| %>
    <label style="<%= name_position(m.user.name) %>"><%= m.user.name %></label>
    <%= media_tag m,  size: '225x225', style: 'position: center;' %>
    <br />

<% end %>
</article>

<footer class="navbar-fixed-bottom">
  <%= render partial: 'form', message: @message %>
</footer>
